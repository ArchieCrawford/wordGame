import java.util.Scanner;

public class WordGame {

    public static void main(String[] args) {
        System.out.println("Fill in the blanks so we can make your story!!!");
        System.out.println("Answer the Questions Below to Display a Story.");

        String name, age, city, college, profession, animal, petName ;

        System.out.print("Enter a your name: ");
        Scanner input = new Scanner(System.in);
        name = input.next();
        System.out.print("What is your age? " );
        age = input.next();
        System.out.print("What city were you born in? ");
        city = input.next();
        System.out.print("What is the name of the college you went to? ");
        college = input.next();
        System.out.print("What is your profession? ");
        profession = input.next();
        System.out.print("What type of animal do you have? ");
        animal = input.next();
        System.out.print("What is your pets name? ");
        petName = input.next();

        System.out.println("There once was a person named " + name + " who lived in " + city + ". At the age of " + age +
                ", " + name + " went to college at " + college + ". " + name + "graduated and went to work as a " + profession + ".");
        System.out.println("Then " + name + " adopted a(n) " + animal + " named " + petName + " They Both live happily ever after!");


    }

}
